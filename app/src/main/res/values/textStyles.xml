<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.HeadlineSmall" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextAppearance.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextAppearance.BigBody" parent="TextAppearance.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.TitleLarge" parent="TextAppearance.AppCompat.Title">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TitleLarge.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/hint_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.TitleMedium" parent="TextAppearance.AppCompat.Title">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.ListItemTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.ListItemText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/hint_text</item>
    </style>

    <!-- ++++++++++++++++++++++++++++++++++++++++ Logs +++++++++++++++++++++++++++++++++++++++++ -->

    <style name="TextAppearance.LogMessage" parent="TextAppearance.Body">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="TextAppearance.LogMessage.Verbose" parent="TextAppearance.LogMessage">
        <item name="android:textColor">@color/log_verbose</item>
    </style>

    <style name="TextAppearance.LogMessage.Debug">
        <item name="android:textColor">@color/log_debug</item>
    </style>

    <style name="TextAppearance.LogMessage.Info">
        <item name="android:textColor">@color/log_info</item>
    </style>

    <style name="TextAppearance.LogMessage.Warning">
        <item name="android:textColor">@color/log_warning</item>
    </style>

    <style name="TextAppearance.LogMessage.Error">
        <item name="android:textColor">@color/log_error</item>
    </style>

</resources>
