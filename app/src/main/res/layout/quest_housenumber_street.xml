<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:divider="@drawable/space_8dp"
              android:showDividers="middle">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quest_address_street_description"/>

    <me.grantland.widget.AutofitLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <de.westnordost.streetcomplete.view.AutoCorrectAbbreviationsEditText
            android:id="@+id/streetNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_roadname"
            android:padding="8dp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textSize="32dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:textColor="#ffffff"
            tools:text="My cool Street"
            />

    </me.grantland.widget.AutofitLayout>

</LinearLayout>
