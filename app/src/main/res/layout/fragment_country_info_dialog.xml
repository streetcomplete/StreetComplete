<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogAndBackgroundContainer"
    android:visibility="invisible"
    tools:visibility="visible"
    android:clipToPadding="false"
    android:clipChildren="false">

    <View
        android:id="@+id/dialogBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dialog_shadow"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_max="360dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:elevation="24dp">

        <View
            android:id="@+id/dialogBubbleBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/spacer"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/speech_bubble_none"/>

        <de.westnordost.streetcomplete.view.CircularMaskFrameLayout
            android:id="@+id/titleView"
            android:layout_width="@dimen/quest_statistics_country_icon_width"
            android:layout_height="@dimen/quest_statistics_country_icon_height"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:circularity="0.0"
            android:elevation="24dp">

            <ImageView
                android:id="@+id/titleImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_flag_in" />

        </de.westnordost.streetcomplete.view.CircularMaskFrameLayout>

        <LinearLayout
            android:id="@+id/dialogContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:divider="@drawable/space_16dp"
            android:layout_marginStart="@dimen/dialog_horizontal_margin"
            android:layout_marginEnd="@dimen/dialog_horizontal_margin"
            android:showDividers="beginning|middle|end"
            app:layout_constraintTop_toBottomOf="@id/titleView">

            <LinearLayout
                android:id="@+id/solvedQuestsContainer"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:gravity="center_vertical"
                android:divider="@drawable/space_4dp"
                android:showDividers="middle"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_48dp"/>

                <TextView
                    android:id="@+id/solvedQuestsText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textAlignment="gravity"
                    android:textAppearance="@style/TextAppearance.Title"
                    android:textSize="48dp"
                    tools:text="1021" />

            </LinearLayout>

            <TextView
                android:id="@+id/countryRankTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.BigBody"
                android:text="@string/user_statistics_country_rank"/>

            <Button
                android:id="@+id/wikiLinkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_open_in_browser_primary_24dp"
                android:drawablePadding="8dp"
                android:text="@string/user_statistics_country_wiki_link"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        </LinearLayout>

        <Space
            android:id="@+id/spacer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/quest_statistics_country_icon_offset"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
