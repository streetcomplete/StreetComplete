<?xml version="1.0" encoding="utf-8"?>
<de.westnordost.streetcomplete.view.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentLeft="true"
    android:background="@color/background"
    android:elevation="@dimen/speech_bubble_elevation"
    tools:ignore="RtlHardcoded">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/editHistoryList"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:paddingBottom="22dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:reverseLayout="true"
        android:orientation="vertical"
        tools:listitem="@layout/row_edit_item" />

</de.westnordost.streetcomplete.view.SlidingRelativeLayout>
