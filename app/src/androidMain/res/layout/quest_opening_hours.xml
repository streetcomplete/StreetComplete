<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/openingHoursList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/buttonsRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/addTimesButton"
            android:text="@string/quest_openingHours_add_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

        <ImageButton
            android:id="@+id/scanPhotoButton"
            android:src="@drawable/ic_camera_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="12dp"
            android:backgroundTint="?colorPrimary"
            android:contentDescription="@string/quest_openingHours_scan_photo"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

    </LinearLayout>
</LinearLayout>
